@model PEngine.Web.Models.Introduction
@{
    ViewBag.Title = "Introduction";
    Layout = "_Layout";

    var birthdate = DateTime.Now;
    var age = (DateTime.Now - birthdate).Days / (float)365;
}

<div class="introduce-block">
        <div class="introduce-block-header">
            <h2>Introduction</h2>
            @if (ViewBag.Authenticated)
            {
                <a class="button dark" asp-controller="Introduction" asp-action="Edit">Edit</a>
            }
        </div>
    
    <div class="introduce-block-horiz">
        <img src="/Image/Profile/Thumbnail" alt="profile image"/>
        <div class="introduce-block">
            <p class="identity-row"><span>Name</span> </p>  
            <p class="identity-row"><span>Birthdate</span> @birthdate.ToString("yyyy. MM. dd.") (@age y/o)</p>
            <p class="identity-row"><span>Pronouns</span> </p>
            <p class="identity-row"><span>Nationality</span> </p>
            <p class="identity-row"><span>Religion</span> </p>
            <p class="identity-row"><span>As known as</span> </p>
            <p class="identity-row"><span>Contact</span> </p>
        </div>
    </div>
    
    <p>Message Here...</p>
</div>

<div class="introduce-block">
    <h3>Interests</h3>    
</div>

<div class="introduce-block">
    <h3>Skills</h3>    
</div>

<div class="introduce-block">
    <h3>Affiliation</h3>    
</div>

<div class="introduce-block">
    <h3>Education</h3>    
</div>

<div class="introduce-block">
    <h3>Publications</h3>    
</div>